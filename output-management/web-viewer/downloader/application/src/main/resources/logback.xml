<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %-5level: %message%n
            </pattern>
        </encoder>
    </appender>
    <root level="warn">
        <appender-ref ref="stdout" />
    </root>
    <logger name="com.broadcom.msd.om.sample.downloader" level="info" additivity="false">
        <appender-ref ref="stdout" />
    </logger>
</configuration>
